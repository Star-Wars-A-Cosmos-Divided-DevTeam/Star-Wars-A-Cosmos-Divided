	EditorGroup = "WeaponsProjectile"
	DescriptionKey = "Parts/MissileLauncherDesc"
	Resources
	[
		[steel, 60]
		[coil2, 20]
		[processor, 1]
	]
	Size = [2, 4]
	PhysicalRect = [0, 1, 2, 3]
	RectColliderRectType = Normal
	SaveRect = &PhysicalRect
	SelectionPriority = 1
	SelectionTypeByRotation = true
	MaxHealth = 6000
	TypeCategories = [weapon, uses_missiles, uses_emps, uses_nukes, uses_mines, uses_launcher_parts, is_crewed]
	ReceivableBuffs : ^/0/ReceivableBuffs []
	ProhibitAbove = 2
	AllowedDoorLocations
	[
		[-1, 2]
		[2, 2]
	]
	ForceManhattanPathInPart = true
	BlockedTravelCellDirections
	[
		{
			Key = [0, 3]
			Value = [Right]
		}
		{
			Key = [1, 3]
			Value = [Left]
		}
	]
	ExternalWallsByCell
	[
		{
			Key = [0, 1]
			Value = [TopLeft, Bottom, BottomLeft, Left]
		}
		{
			Key = [1, 1]
			Value = [TopRight, Right, BottomRight, Bottom]
		}
	]
	InternalWallsByCell
	[
		{
			Key = [0, 0]
			Value = [Left, TopLeft, Top, TopRight]
		}
		{
			Key = [1, 0]
			Value = [Right, TopRight, Top, TopLeft]
		}
	]
	EditorIcon = &<he/missile_launcher_he.rules>/EditorIcon
	Components : ^/0/Components
	{
		IsOperational
		{
			Type = MultiToggle
			Toggles = [PowerToggle, PartCrew]
			Mode = All
		}

		PowerToggle
		{
			Type = UIToggle
			ToggleID = "on_off"
			Default = 1
			RequiresCommand = false
		}

		CommandConsumer
		{
			Type = CommandConsumer
			OperationalToggle = PowerToggle
			CommandPoints = 5
		}

		FireModeToggle
		{
			Type = UIToggle
			ToggleID = "fire_mode"
			Default = 1
			ToggledOnChoices = [0, 1, 2]
		}
		AutoTargetToggle
		{
			Type = ModeToggle
			Mode = FireModeToggle
			OnModes = [1, 2]
		}
		AutoFireToggle
		{
			Type = ModeToggle
			Mode = FireModeToggle
			OnMode = 2
		}

		MissileType
		{
			Type = UIToggle
			ToggleID = "missile_type"
			Default = 0
			AlwaysAllowInBuildMode = true
		}

		HEMissilesToggle
		{
			Type = ModeToggle
			Mode = MissileType
			OnMode = 0
		}
		HEMissilesComponents
		{
			Type = ToggledComponents
			Toggle = HEMissilesToggle
			IncludeInBlueprints = true
			Components = &<he/missile_launcher_he.rules>/Components
		}

		EMPMissilesToggle
		{
			Type = ModeToggle
			Mode = MissileType
			OnMode = 1
		}
		EMPMissilesComponents
		{
			Type = ToggledComponents
