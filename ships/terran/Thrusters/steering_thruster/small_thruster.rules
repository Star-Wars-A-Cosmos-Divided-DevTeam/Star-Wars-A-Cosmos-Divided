		ArmorRoofType
		{
			Type = UIToggle
			ToggleID = "SW.armor_roof_type"
			Default = 0
			AvailableChoices = [0, 1, 2, 3]
			RequiresCommand = false
		}

		VanillaArmorRoofToggle
		{
			Type = ModeToggle
			Mode = ArmorRoofType
			OnMode = 0
		}

		OldArmorRoofToggle
		{
			Type = ModeToggle
			Mode = ArmorRoofType
			OnMode = 1
		}

		BlankArmorRoofToggle
		{
			Type = ModeToggle
			Mode = ArmorRoofType
			OnMode = 2
		}

		BoxedArmorRoofToggle
		{
			Type = ModeToggle
			Mode = ArmorRoofType
			OnMode = 3
		}

		ArmorRoofNormalType
		{
			Type = UIToggle
			ToggleID = "SW.armor_roof_normal_type"
			Default = 0
			AvailableChoices = [0, 1, 2, 3]
			RequiresCommand = false
		}

		VanillaArmorRoofNormalToggle
		{
			Type = ModeToggle
			Mode = ArmorRoofNormalType
			OnMode = 0
		}

		OldArmorRoofNormalToggle
		{
			Type = ModeToggle
			Mode = ArmorRoofNormalType
			OnMode = 1
		}

		BlankArmorRoofNormalToggle
		{
			Type = ModeToggle
			Mode = ArmorRoofNormalType
			OnMode = 2
		}

		BoxedArmorRoofNormalToggle
		{
			Type = ModeToggle
			Mode = ArmorRoofNormalType
			OnMode = 3
		}


		Graphics
		{
			Type = Graphics
			Location = [0.5, 0.5]
			OperationalToggle = IsOperational

			AnimationSpeedFactor = DoodadAnimationSpeedFactorValue
			AnimationSpeedFactorRenormalize = [0.64, 2.1]

			Floor
			{
				Layer = "floors"
				DamageLevels
				[
					{
						File = "floor.png"
						Size = [1, 1]
					}
					{
						File = "floor_33.png"
						Size = [1, 1]
					}
					{
						File = "floor_66.png"
						Size = [1, 1]
					}
				]
			}
			OperationalDoodad
			{
				Layer = "doodads_high"
				DamageLevels
				[
					{
						AnimationFiles
						[
							"doodads on1.png"
							"doodads on2.png"
							"doodads on3.png"
							"doodads on4.png"
							"doodads on5.png"
							"doodads on6.png"
							"doodads on7.png"
							"doodads on8.png"
						]
						Size = [1, 1]
						AnimationInterval = 0.075
					}
				]
			}
			NonOperationalDoodad
			{
				Layer = "doodads_high"
				DamageLevels
				[
					{
						File = "doodads off.png"
						Size = [1, 1]
					}
				]
			}
			OperationalLighting
			{
				Layer = "lights_add"
				DamageLevels
				[
					{
						File = "lights.png"
						Size = [1, 1]
					}
				]
			}
			Walls
			{
				Layer = "walls"
				DamageLevels
				[
					{
						File = "walls.png"
						Size = [1, 1]
					}
					{
						File = "walls_33.png"
						Size = [1, 1]
					}
					{
						File = "walls_66.png"
						Size = [1, 1]
					}
				]
			}
/*			Roof
			{
				Layer = "roofs"
				DamageLevels
				[
					{
						File = "roof.png"
						NormalsFile = "roof_normals.png"
