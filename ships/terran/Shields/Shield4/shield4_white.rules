Components
	{
		ArcShield
		{
			Type = ArcShield
			Radius = &<../ShieldTuner.rules>/Huge/Radius
			Arc = &<../ShieldTuner.rules>/All/Arc
			OperationalToggle = IsOperational
			BlockedByOperationalParts = &<../ShieldTuner.rules>/All/BlockedByOperationalParts
			DrainResourcesFrom = BatteryStorage
			Location = &<../ShieldTuner.rules>/Huge/Location
			PenetrationResistance = &<../ShieldTuner.rules>/Huge/PenetrationResistance
			ResourceDrainPerDamage = &<../ShieldTuner.rules>/Huge/ResourceDrainPerDamage

			BlueprintArcSprite
			{
				Texture
				{
					File =	"./Data/ships/terran/shield_gen_small/shield_energy.png"
					UVMode = Wrap
					SampleMode = Linear
					MipLevels = 1
				}
				Size = &<../ShieldTuner.rules>/Huge/Size
				Color = [0, 0, 255, 127]
			}
			BlueprintArcSpriteSegments = 64

			CoverageArcSprite
			{
				Texture
				{
					File = "./Data/ships/terran/shield_gen_small/shield_energy.png"
					UVMode = Wrap
					SampleMode = Linear
					MipLevels = 1
				}
				Size = &<../ShieldTuner.rules>/Huge/Size
				Color = [255, 255, 255, 127]
			}
			CoverageArcSpriteSegments = 64
			Rotation = -90d

			ShieldMediaEffects
			[
				{
					Type = ArcShield
					Radius = &<../ShieldTuner.rules>/Huge/Radius
					Arc = &<../ShieldTuner.rules>/All/Arc
					FadeInTime = .25
					FadeOutTime = .25
					FadeFromScale = .8
					ArcSprite
					{
						Texture
						{
							File = "./Data/ships/terran/shield_gen_small/shield_energy.png"
							UVMode = Wrap
							SampleMode = Linear
							MipLevels = 1
						}
						Shader = "./Data/ships/terran/shield_gen_small/shield.shader"
						_waveTex
						{
							File = "./Data/ships/terran/shield_gen_small/shield_energy_wave.png"
							UVMode = Wrap
							SampleMode = Linear
							MipLevels = max
						}
						_maskTex
						{
							File = "./Data/ships/terran/shield_gen_small/shield_mask.png"
							UVMode = Wrap
							SampleMode = Linear
							MipLevels = 1
						}
						_waveSpeed = &<../ShieldTuner.rules>/Huge/_waveSpeed
						_waveAlpha = &<../ShieldTuner.rules>/All/_waveAlpha
						_waveCurveInterval = &<../ShieldTuner.rules>/Huge/_waveCurveInterval
						_waveCurveMagnitude = &<../ShieldTuner.rules>/Huge/_waveCurveMagnitude
						_waveCurveUOffsetPerSecond = &<../ShieldTuner.rules>/Huge/_waveCurveUOffsetPerSecond
						_fullPowerColor1 = &<../ShieldTuner.rules>/White/_fullPowerColor1
						_lowPowerColor1 = &<../ShieldTuner.rules>/White/_lowPowerColor1
						_fullPowerColor2 = &<../ShieldTuner.rules>/White/_fullPowerColor2
						_lowPowerColor2 = &<../ShieldTuner.rules>/White/_lowPowerColor2
						_lowPowerThicknessExponent = &<../ShieldTuner.rules>/All/_lowPowerThicknessExponent
						TargetBlendMode = Add
						_xScale = &<../ShieldTuner.rules>/Huge/_xScale
						Size = &<../ShieldTuner.rules>/Huge/Size
					}
					ArcSpriteSegments = 64
					Bucket = Lower1
				}

				: /BASE_SOUNDS/AudioExteriorDetail
				{
					Sound = "./Data/ships/terran/shield_gen_small/shield_loop.wav"
					Volume = .15
					Speed = .5
					MaxConcurrent = 1
					MaxConcurrentVolume = .3
					DynamicVolume : ^/0/DynamicVolume
					{
						MinDistance = .75
						MaxDistance = 1.5
					}
					IgnoreIntensity = true
				}
			]
			
			HitMediaEffects
			[
				{
					Type = ArcShield
					FadeInTime = .1
					FadeOutTime = .5
					Radius = &<../ShieldTuner.rules>/Huge/Radius
					Arc = &<../ShieldTuner.rules>/All/HitArc
					ArcSprite
					{
						Texture
						{
							File = "./Data/ships/terran/shield_gen_small/shield_energy_original.png"
							UVMode = Wrap
							SampleMode = Linear
							MipLevels = max
						}
						Shader = "./Data/ships/terran/shield_gen_small/shield.shader"
						_waveTex
						{
							File = "./Data/ships/terran/shield_gen_small/shield_energy_wave.png"
							UVMode = Wrap
							SampleMode = Linear
							MipLevels = max
						}
						_maskTex
						{
							File = "./Data/ships/terran/shield_gen_small/shield_energy_original.png"
							UVMode = Wrap
							SampleMode = Linear
							MipLevels = max
						}
						_waveSpeed = -2*(&<../ShieldTuner.rules>/Huge/_waveSpeed)
						_waveAlpha = 0.75*(&<../ShieldTuner.rules>/All/_waveAlpha)
						_waveCurveInterval = &<../ShieldTuner.rules>/Huge/_waveCurveInterval
						_waveCurveMagnitude = (5/7)*(&<../ShieldTuner.rules>/Huge/_waveCurveMagnitude)
						_fullPowerColor1 = &<../ShieldTuner.rules>/White/_fullPowerColor1
						_lowPowerColor1 = &<../ShieldTuner.rules>/White/_lowPowerColor1
						_fullPowerColor2 = &<../ShieldTuner.rules>/White/_fullPowerColor2
						_lowPowerColor2 = &<../ShieldTuner.rules>/White/_lowPowerColor2
						_waveCurveUOffsetPerSecond = 0
						_lowPowerThicknessExponent = &<../ShieldTuner.rules>/All/_lowPowerThicknessExponent
						TargetBlendMode = Add
						_xScale = &<../ShieldTuner.rules>/Huge/_xScale
						Size = &<../ShieldTuner.rules>/Huge/Size
					}
					ArcSpriteSegments = 6
					Bucket = Upper3
				}
				&/SW_SOUNDS/ShieldHit
			]
		}

		ArcShield90 : ArcShield
		{
			Rotation = 90d
		}

		EmitterEffect
		{
			Type = ContinuousEffects
			ChainedTo = ArcShield
			Rotation = 90d
			FactorMediaEffectsIntensityWith = BatteryStorage
			Location = [0, (&<../ShieldTuner.rules>/Huge/Size/1)/2]
			OperationalToggle = ShieldEmitterEffectToggleAndIsOperational
			BlockedByOperationalParts = &<../ShieldTuner.rules>/All/BlockedByOperationalParts
			ParentToShip = true
			MediaEffects
			[
				{
					Type = ArcShield
					Radius = (&<../ShieldTuner.rules>/Huge/Size/1)/2
					Arc = &<../ShieldTuner.rules>/All/Arc
					FadeInTime = .25
					FadeOutTime = .25
					ArcSprite
					{
						Texture
						{
							File = "./Data/ships/terran/shield_gen_small/shield_energy.png"
							UVMode = Wrap
							SampleMode = Linear
							MipLevels = 1
						}
						UVRect = [0, 1, 1, -1]
						Shader = "./Data/ships/terran/shield_gen_small/shield.shader"
						_waveTex
						{
							File = "./Data/ships/terran/shield_gen_small/shield_energy_wave.png"
							UVMode = Wrap
							SampleMode = Linear
							MipLevels = max
						}
						_maskTex
						{
							File = "./Data/ships/terran/shield_gen_small/shield_mask.png"
							UVMode = Wrap
							SampleMode = Linear
							MipLevels = 1
						}
						_waveSpeed = -1*(&<../ShieldTuner.rules>/Huge/_waveSpeed)
						_waveAlpha = &<../ShieldTuner.rules>/All/_waveAlpha
						_waveCurveInterval = &<../ShieldTuner.rules>/Huge/_waveCurveInterval
						_waveCurveMagnitude = &<../ShieldTuner.rules>/Huge/_waveCurveMagnitude
						_waveCurveUOffsetPerSecond = &<../ShieldTuner.rules>/Huge/_waveCurveUOffsetPerSecond
						_fullPowerColor1 = &<../ShieldTuner.rules>/White/_fullPowerColor1
						_lowPowerColor1 = &<../ShieldTuner.rules>/White/_lowPowerColor1
						_fullPowerColor2 = &<../ShieldTuner.rules>/White/_fullPowerColor2
						_lowPowerColor2 = &<../ShieldTuner.rules>/White/_lowPowerColor2
						_lowPowerThicknessExponent = &<../ShieldTuner.rules>/All/_lowPowerThicknessExponent
						TargetBlendMode = Add
						_xScale = (&<../ShieldTuner.rules>/Huge/_xScale)/8
						Size = [0, (&<../ShieldTuner.rules>/Huge/Size/1)/2]
					}
					ArcSpriteSegments = 64
					Bucket = Upper1
				}
			]
		}

		EmitterEffect90 : EmitterEffect
		{
			ChainedTo = ArcShield90
		}
	}