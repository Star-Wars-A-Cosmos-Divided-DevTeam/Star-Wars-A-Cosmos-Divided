//Code Bases For ProgressBar's

Old : <./Data/ships/terran/laser_blaster_small/laser_blaster_small.rules>/Part/Components/ReloadProgressBar
{
	Type = ProgressBar
	OperationalToggle = IsOperational
	ShowProgressFor = Turret
	Invert = true
}

Alternating : <./Data/ships/terran/laser_blaster_large/laser_blaster_large.rules>/Part/Components/ReloadProgressBar
{
	Type = ProgressBar
	OperationalToggle = IsOperational
	ShowProgressFor = FireTimer
	Invert = true
}

Non_Switchable : <./Data/ships/terran/missile_launcher/he/missile_launcher_he.rules>/Components/ReloadProgressBar
{
	Type = ProgressBar
	OperationalToggle = IsOperational
	ShowProgressFor = CommonReloadTimer
	Invert = true
} 

//Abstract SW Specific ProgressBar
Switchable : <./Data/ships/terran/missile_launcher/he/missile_launcher_he.rules>/Components/ReloadProgressBar
{
	Type = ProgressBar
	OperationalToggle = SwitchWeaponCooldownTimer
	ShowProgressFor = CommonReloadTimer
	Invert = true
}

Switchable_Alternating : Switchable
{
	ShowProgressFor = CommonAlternatingReloadTimer
}