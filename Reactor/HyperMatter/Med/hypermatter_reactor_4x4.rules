						Size = [4, 4]
						AnimationInterval = 0.095*(&~/Scale)
					}
					{
						AnimationFiles
						[
							"floor_on1_66.png"
							"floor_on2_66.png"
							"floor_on3_66.png"
							"floor_on4_66.png"
							"floor_on5_66.png"
							"floor_on6_66.png"
							"floor_on7_66.png"
							"floor_on8_66.png"
						]
						Size = [4, 4]
						AnimationInterval = 0.095*(&~/Scale)
					}
				]
			}
			OperationalDoodad
			{
				Layer = "doodads_low"
				DamageLevels
				[
					{
						File = "reactor.png"
						Size = [4, 4]
					}
					{
						File = "reactor_33.png"
						Size = [4, 4]
					}
					{
						File = "reactor_66.png"
						Size = [4, 4]
					}
				]
			}
			OperationalLighting
			{
				Layer = "lights_add"
				DamageLevels
				[
					{
						AnimationFiles
						[
							"lights1.png"
							"lights2.png"
							"lights3.png"
							"lights4.png"
							"lights5.png"
							"lights6.png"
							"lights7.png"
							"lights8.png"
						]
						Size = [4, 4]
						AnimationInterval = 0.075*(&~/Scale)
					}
					{
						AnimationFiles
						[
							"lights1.png"
							"lights2.png"
							"lights3.png"
							"lights4.png"
							"lights5.png"
							"lights6.png"
							"lights7.png"
							"lights8.png"
						]
						Size = [4, 4]
						AnimationInterval = 0.075/1.75*(&~/Scale)
					}
					{
						AnimationFiles
						[
							"lights1.png"
							"lights2.png"
							"lights3.png"
							"lights4.png"
							"lights5.png"
							"lights6.png"
							"lights7.png"
							"lights8.png"
						]
						Size = [4, 4]
						AnimationInterval = 0.075/2.5*(&~/Scale)
					}
				]
			}
			Walls
			{
				Layer = "walls"
				DamageLevels
				[
					{
						File = "walls.png"
						Size = [4, 4]
					}
					{
						File = "walls_33.png"
						Size = [4, 4]
					}
					{
						File = "walls_66.png"
						Size = [4, 4]
					}
				]
			}
			Roof
			{
				Layer = "roofs"
				DamageLevels
				[
					{
						File = "roof.png"
						NormalsFile = "roof_normals.png"
						Size = [4, 4]
					}
					{
						File = "roof_33.png"
						NormalsFile = "roof_normals_33.png"
