		{
			Type = ProgressBar
			OperationalToggle = True
			ShowProgressFor = HypermatterStorage
			LowColor = [0, 32, 64]
			HighColor = [0, 250, 250]
			FullColor = [0, 255, 255]
		}
		HypermatterProducer
		{
			Type = ResourceConverter
