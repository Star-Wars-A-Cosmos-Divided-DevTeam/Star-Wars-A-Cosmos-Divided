ID = SW.discord_missle
OtherIDs = ["discord_missle"]

Range = 150
IdealRange = 125
Speed = 65

Components
{
	Physics
	{
		Type = CirclePhysics
		Density = 0.1
		Radius = 0.4
                LinearDamping = 1.1
        }

	Homing
	{
		Type = TargetHoming
		TurnVelocity = 360d
		Delay = 1
		RaycastForward = [1, 0]
		RaycastLeft = [1, -1]
		RaycastRight = [1, 1]
	}

	Acceleration
	{
		Type = Acceleration
		Acceleration = 100
	}

	DeathByEnemyProximity
	{
		Type = DeathByEnemyProximity
		Interval = .05
		Range = 17
		DetectsShips = true
		DetectsBullets = false
		StartDelay = .1

		OnDeath = &../Death/OnDeath
	}

	Death
	{
		Type = DeathByLifetime
		Lifetime = 2
		TargetHomingComponent = Homing

		OnDeath
		{
			HitEffects
			[
				{
					Type = SpawnBullets
					Bullet = &<buzzdroid.txt>
					Count = [3,5]
					Distance = [0, 2]
					Arc = [-0d,0d]
					Spread = [-50d, 50d]
					InheritVelocity = false
//					ScaleCount = true
				}	
			]
		}
	}

	Sprite
	{
		Type = Sprite
		RenderBucket = Lower
		Sprite
		{
			Texture
			{
				File = "missile.png"
				SampleMode = Linear
				MipLevels = max
			}
			Size = [2, 1.5]
		}
	}

	MediaEffects
	{
		Type = MediaEffects
		MediaEffects
		[
		    &/PARTICLES/DiscordThrusterGlow
		    &/PARTICLES/Shot/Laser/Glow/Med/Blue
		]
	}
	
	Targetable
	{
		Type = Targetable
		Health = 3000
		TargetCategory = "missile"

		OnDeath
		{
			MediaEffects
			[
				&<./Data/shots/bullet_med/particles/bullet_hit_med.txt>
				&<./Data/shots/bullet_med/particles/bullet_smoke_med.txt>
				&<./Data/shots/bullet_med/particles/bullet_flash_med.txt>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/bullet_med/bullet_med_hit.wav"
					Volume = .4
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .05
					Duration = .5
				}
			]
		}
	}

	Hit
	{
		Type = SimpleHit
		SourceShipCollisionDelay = .01

		HitShield = &~/Components/Death/OnDeath
		HitOperational = &~/Components/Death/OnDeath
		HitStructural = &~/Components/Death/OnDeath
	}

}