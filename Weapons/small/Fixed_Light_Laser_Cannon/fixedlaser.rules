Part : &<./Data/ships/terran/base_part_terran.rules>/Part
{
   //IDs
	ID = SW.fixed_laser_cannon_switchable
	OtherIDs = [SW.fixed_laser_cannonL,SW.fixedlaserL,SW.fixed_laser_cannon_L,SW.fixedlaserR,SW.fixed_laser_cannonR, SW.fixed_laser_cannon_R]
