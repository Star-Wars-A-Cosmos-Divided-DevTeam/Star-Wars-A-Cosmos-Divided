			Triggers = [Turret]
		}

		TurretLocationProxy
		{
			Type = ChainableProxy
			ComponentID = Turret
		}

		TurretGraphics
		{
			Type = Graphics
			OperationalToggle = IsOperational
			ChainedTo = Turret
			Location = [.5, 0]
			Rotation = 90d
			Walls
			{
				Layer = "walls"
				DamageLevels
				[
