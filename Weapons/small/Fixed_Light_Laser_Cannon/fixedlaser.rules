	NameKey = "Parts/fixedlasercannon"
	IconNameKey = "Parts/fixedlasercannonIcon"
	DescriptionKey = "Parts/fixedlasercannonDesc"

    //Groups&Categories
	TypeCategories = [weapon, uses_power]//, is_crewed
	EditorGroups = ["WeaponsEnergy", "TechI"]

    //Resources&Size&Health
	Resources
	[
		[steel, 12]
		[coil, 10]
	]
	Size = [1, 1]
	MaxHealth = 2000

    //Rects
	//PhysicalRect = [0, 1, 1, 1]
	//SaveRect = [0, 1, 1, 1]
	IsFlippable = true
	FlipHRotate = [0, 3, 2, 1] 
	FlipVRotate = [2, 1, 0, 3]

    //Selections
	SelectionPriority = 1
	SelectionTypeByRotation = true
	SelectionTypeID = "blasterlasers"

    //PartSpecific
	AIValueFactor = 2
	InitialPenetrationResistance = 3

    //ReceivableBuffs&ProbitedBy
	ReceivableBuffs : ^/0/ReceivableBuffs []
