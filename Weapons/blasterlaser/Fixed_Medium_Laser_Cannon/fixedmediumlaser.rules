						File = "../doodads off.png"
						Size = [1, 1]
						Offset = [0, -0.5]
					}
				]
			}
			OperationalLighting
			{
				Layer = "lights_add"
				Offset = [0, -0.5]
				DamageLevels
				[
					{
						File = "../lights.png"
						Size = [1, 1]
					}
				]
			}
			Walls
			{
				Layer = "walls"
				Offset = [0, -0.5]
				DamageLevels
				[
					{
						File = "../walls.png"
						Size = [1, 1]
					}
					{
						File = "../walls_33.png"
						Size = [1, 1]
					}
					{
						File = "../walls_66.png"
						Size = [1, 1]
					}
				]
			}
			Roof
			{
				Layer = "roofs"
				Offset = [0, -0.5]
				DamageLevels
				[
					{
						File = "../roof.png"
						NormalsFile = "../roof_normals.png"
						Size = [1, 1]
					}
					{
						File = "../roof_33.png"
						NormalsFile = "../roof_normals_33.png"
						Size = [1, 1]
					}
					{
						File = "../roof_66.png"
						NormalsFile = "../roof_normals_66.png"
						Size = [1, 1]
					}
				]
			}
