			}
		}

		BarrelGraphics
		{
			Type = Graphics
			ChainedTo = Turret
			//Location = [0, 0]
			Rotation = 90d
			Floor
			{
				Layer = "roof_turrets"
				Offset = [-40/64, -103/64]
				DamageLevels
				[
					{
						File = "../barrel[1,2]03.png"
						Size = [1, 2]
					}
				]
			}
			Walls
			{
				Layer = "roof_turrets"
				Offset = [40/64, -103/64]
