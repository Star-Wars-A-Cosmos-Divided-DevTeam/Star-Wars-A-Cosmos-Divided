Part : &<./Data/ships/terran/base_part_terran.rules>/Part
{	
	ID = SW.turbolaser_tower_triple01
	NameKey = "Parts/TurbolaserTowerTriple01"
	IconNameKey = "Parts/TurbolaserTowerTriple01Icon"
	DescriptionKey = "Parts/TurbolaserTowerTriple01Desc"
	EditorGroups = ["WeaponsEnergy", "SWTechIII"]
	Resources
	[
		[steel, 8] //
	]  //Cost = 30000
	AIValueFactor = 1

	TypeCategories = [weapon, uses_power, uses_laser_parts, is_crewed]
	Size = [4, 4]
	SelectionPriority = 1
	SelectionTypeByRotation = true
	SelectionTypeID = "cannons"
	MaxHealth = 16000
	InitialPenetrationResistance = 5


	EditorIcon
	{
		Texture
		{
			File = "icon01.png"
			SampleMode = Linear
		}
		Size = [64, 68]
	}
	
	Components : ^/0/Components, &<triple01_graphics.rules>
	{
		IsOperational
		{
			Type = MultiToggle
			Toggles = [PowerToggle, BatteryStorage, PartCrew]
			Mode = All
		}
		PowerToggle
		{
			Type = UIToggle
			ToggleID = "on_off"
			Default = 1
		}
		FireModeToggle
		{
			Type = UIToggle
			ToggleID = "fire_mode"
			Default = 1
			ToggledOnChoices = [0, 1, 2]
		}
		AutoTargetToggle
		{
			Type = ModeToggle
			Mode = FireModeToggle
			OnModes = [1, 2]
		}
		AutoFireToggle
		{
			Type = ModeToggle
			Mode = FireModeToggle
			OnMode = 2
		}

		TurretProxy
		{
			Type = ChainableProxy
			ComponentID = Turret
			//Location = [0, 0]
		}

		MunitionType
		{
			Type = UIToggle
			ToggleID = "SW.munition_type"
			Default = 0
			AvailableChoices = [0,2]
			ToggledOnChoices = [0,2]
			AlwaysAllowInBuildMode = true
		}
		RedMunitionToggle
		{
			Type = ModeToggle
			Mode = MunitionType
			OnMode = 0
		}
		RedMunitionComponents
		{
			Type = ToggledComponents
			Toggle = RedMunitionToggle
			IncludeInBlueprints = true
			Components = &<turbolaser01_red.rules>/Components
		}
/*
		BlueMunitionToggle
		{
			Type = ModeToggle
			Mode = MunitionType
			OnMode = 1
		}
		BlueMunitionComponents
		{
			Type = ToggledComponents
			Toggle = BlueMunitionToggle
			IncludeInBlueprints = true
			Components = &<tower/xx9_turbolaser_red.rules>/Components
		}
*/
		GreenMunitionToggle
		{
			Type = ModeToggle
			Mode = MunitionType
			OnMode = 2
		}
		GreenMunitionComponents
		{
			Type = ToggledComponents
			Toggle = GreenMunitionToggle
			IncludeInBlueprints = true
			Components = &<turbolaser01_green.rules>/Components
		}


		FloorGraphics1
		{
			Type = Graphics
			Location = [2, 2]
			Floor
			{
				Layer = "floors"
				Offset = [-1, -1]
				DamageLevels
				[
					{
						File = "../floor06[2,2]01.png"
						Size = [2, 2]
					}
					{
						File = "../floor06[2,2]01_33.png"
						Size = [2, 2]
					}
					{
						File = "../floor06[2,2]01_66.png"
						Size = [2, 2]
					}
				]
			}
			Walls : &Floor
			{
				Offset = [1, -1]
			}
			Roof : &Floor
			{
				Offset = [-1, 1]
			}
			OperationalDoodad = &NonOperationalDoodad
			NonOperationalDoodad : &Floor
			{
				Offset = [1, 1]
			}
		}

		Graphics
		{
			Type = Graphics
			OperationalToggle = IsOperational,
			Location = [2, 2]
			OperationalLighting
			{
				Layer = "lights_add"
				DamageLevels
				[
					{
						File = "../Turbolasers_Light/lights.png"
						Size = [4, 4]
					}
				]
			}
			OperationalDoodad
			{
				Layer = "doodads_low"
				DamageLevels
				[
					{
						AnimationFiles
						[
							"../Turbolasers_Light/console on1.png"
							"../Turbolasers_Light/console on2.png"
							"../Turbolasers_Light/console on3.png"
						]
						Size = [2, 2]
						//Offset = [0, 0]//-0.67]
						AnimationInterval = 0.50
					}
				]
			}
			NonOperationalDoodad
			{
				Layer = "doodads_low"
				DamageLevels
				[
					{
						File = "../Turbolasers_Light/console off.png"
						Size = [2, 2]
						//Offset = [0, 0]//-0.67]
					}
				]
			}
			Walls
			{
				Layer = "walls"
				DamageLevels
				[
					{
						File = "../walls01[4,4].png"
						Size = [4, 4]
					}
