Part : &<./Data/ships/terran/base_part_terran.rules>/Part
{
	//IDs
	ID = SW.HyperdriveMed
	OtherIDs = ["HyperdriveMed"]

	//StringKeys
	NameKey = "Parts/MedHyperdrive"
	IconNameKey = "Parts/MedHyperdrive"
	DescriptionKey = "Parts/MedHyperdriveDesc"

	//Groups&Categories
	EditorGroups = ["Flight", "SWTechII"]
    TypeCategories = [ftl, uses_power, SW_Hyperdrive_Medium, SW_Hyperdrives, SW_Tech_II]
	AffectsValidityOfCategories = [SW_Hyperdrive_Medium, SW_Hyperdrives]
	RequiresCategories = [navicomputer]

	//Resoures&Size&Health
	Resources
	[
		[steel, 101] //V: 3x3 costs 76
		[coil, 50] //V: 3x3 costs 0, but 1 prozessor
		[coil2, 18] //V: 3x3 costs 52
	]
	Size = [2, 2]
	MaxHealth = 8000 //cost based buff.

	//Selections
	SelectionPriority = 0
	SelectionTypeID = "hyperdrives"
	//SelectionTypeByRotation = true
	IgnoreRotationForMirroredSelection = true

	//PartSpecific
	AutoDoorMaxPathLength = 5

	//ReceivableBuffs&Prohibits
	ReceivableBuffs : ^/0/ReceivableBuffs []
	//ProhibitedBy : ^/0/ProhibitedBy [tall]

	//Editor
	EditorIcon
	{
		Texture
		{
			File = "icon.png"
			SampleMode = Linear
		}
		Size = [48, 48]
	}

	//Components&Inheritance
	Components : ^/0/Components
	{
		IsOperational
		{
			Type = MultiToggle
			Toggles = [PowerToggle]
			Mode = All
		}

		PowerToggle
		{
			Type = UIToggle
			ToggleID = "on_off"
			Default = 1
			RequiresCommand = false
		}

		BuffStorageCollector
		{
			Type = GridBuffProvider
			BuffType = SW_Hypernode_Medium
			GridDistance = 1000
			OperationalToggle = IsOperational
		}

		BatteryStorage
		{
			Type = ResourceStorage
			ResourceType = battery
			MaxResources = 12000 //2*2*3000
			InitToMaxResources = 0
			ReceiveResourceMediaEffects = &/COMMON_EFFECTS/PowerDeliver
		}
		CombinedBatteryStorage
		{
			Type = MultiResourceStorage
			ResourceType = battery
			ResourceStorages = [BatteryStorage]
			ViaBuffs
			{
				OutgoingBuffProviders = [BuffStorageCollector]
				ComponentID = NodeBatteryStorage
			}
			AddMode = PrioritizeLeastResources
			ReceiveResourceMediaEffects = &/COMMON_EFFECTS/PowerDeliver
		}
		BatteryConsumer
		{
			Type = ResourceConsumer
			ResourceType = battery
			Storage = CombinedBatteryStorage
			DefaultPriority = &/PRIORITIES/Ftl_Supply
			AdditionalStorageForJobPriority = [BatteryStorage]
			OperationalToggle = FtlDrive
			AllowNonOperationalMinPriorityDelivery = false
			OverrideExclusiveCrewAssignment = true
		}
		BatteryStorageBar
		{
			Type = ProgressBar
			OperationalToggle = FtlDrive
			ShowProgressFor = BatteryStorage
			LowColor = [0, 0, 255]
			HighColor = [0, 0, 255]
			FullColor = [0, 0, 255]
			Height = 10
		}

		HyperiumStorage
		{
			Type = ResourceStorage
			ResourceType = hyperium
			MaxResources = 80 // + 80 max thru nodes = 160
			UITileRect = [.5 + 7/64, .5 + 7/64, 1 - 14/64, 1 - 14/64]
			ReceiveResourceMediaEffects = &/COMMON_EFFECTS/ElementDeliver
			DropResourcesWhenDestroyed = true
		}
		CombinedHyperiumStorage
		{
			Type = MultiResourceStorage
			ResourceType = hyperium
			ResourceStorages = [HyperiumStorage]
			ViaBuffs
			{
				OutgoingBuffProviders = [BuffStorageCollector]
				ComponentID = NodeHyperiumStorage
			}
			AddMode = PrioritizeLeastResources
			ReceiveResourceMediaEffects = &/COMMON_EFFECTS/ElementDeliver
			DropResourcesWhenDestroyed = true
		}
		HyperiumConsumer
		{
			Type = ResourceConsumer
			ResourceType = hyperium
			Storage = CombinedHyperiumStorage
			DefaultPriority = &/PRIORITIES/Utility_Supply
			AdditionalStorageForJobPriority = [HyperiumStorage]
			OperationalToggle = PowerToggle
			ConsumptionToggleButtonOffset = [0, -.4]
		}
		HyperiumStorageBar
		{
			Type = ProgressBar
			ShowProgressFor = HyperiumStorage
			LowColor = [0, 64, 64]
			HighColor = [0, 250, 250]
			FullColor = [0, 255, 255]
		}

		FtlDrive
		{
			Type = FtlDrive
			OperationalToggle = PowerToggle
			PowerStorage = BatteryStorage
			FuelStorage = HyperiumStorage
			SpinDownDuration = 5
			JumpEfficiency = 100% //SW Efficiency Buff
			JumpEfficiencyDistanceRange = [8, 45] //V:3x3 is 10, 60

			JumpOutMediaEffects : &<./Data/ships/terran/hyperdrive_med/hyperdrive_med.rules>/Part/Components/FtlDrive/JumpOutMediaEffects
			[
				&/SW_SOUNDS/Hyperdrive
			]
			JumpOutGateMediaEffects : &<./Data/ships/terran/hyperdrive_med/hyperdrive_med.rules>/Part/Components/FtlDrive/JumpOutGateMediaEffects
			[
				&/SW_SOUNDS/Hyperdrive
			]
			JumpInMediaEffects = &<./Data/ships/terran/hyperdrive_med/hyperdrive_med.rules>/Part/Components/FtlDrive/JumpInMediaEffects
			JumpInGateMediaEffects = &<./Data/ships/terran/hyperdrive_med/hyperdrive_med.rules>/Part/Components/FtlDrive/JumpInGateMediaEffects
		}

		Graphics
		{
			Type = Graphics
			Location = [1, 1]
			OperationalToggle = PowerToggle
			AnimationSpeedFactor = FtlDrive
			AnimationSpeedFactorRenormalize = [0.1, 1.0]
			Floor
			{
				Layer = "floors"
				DamageLevels
				[
					{
						File = "floor.png"
						Size = [2, 2]
					}
					{
						File = "floor_33.png"
						Size = [2, 2]
					}
					{
						File = "floor_66.png"
						Size = [2, 2]
					}
				]
			}
			OperationalDoodad
			{
				Layer = "doodads_high"
				DamageLevels
				[
					{
						AnimationFiles
						[
							"doodads_on1.png"
							"doodads_on1.png"
							"doodads_on1.png"
							"doodads_on1.png"
							"doodads_on1.png"
							"doodads_on1.png"
							"doodads_on1.png"
							"doodads_on1.png"
						]
						Size = [2, 2]
						AnimationInterval = 0.035
					}
				]
			}
			NonOperationalDoodad
			{
				Layer = "doodads_high"
				DamageLevels
				[
					{
						File = "doodads_off.png"
						Size = [2, 2]
					}
				]
			}
			OperationalLighting
			{
				Layer = "lights_add"
				DamageLevels
				[
					{
						AnimationFiles
						[
							"lights0.png"
							"lights1.png"
							"lights2.png"
							"lights3.png"
							"lights4.png"
							"lights5.png"
							"lights6.png"
							"lights7.png"
							"lights8.png"
						]
						Size = [2, 2]
						AnimationInterval = 0.035
					}
				]
			}
			Walls
			{
				Layer = "walls"
				DamageLevels
				[
					{
						File = "walls_02.png"
						Size = [2, 2]
					}
					{
						File = "walls_02_33.png"
						Size = [2, 2]
					}
					{
						File = "walls_02_66.png"
						Size = [2, 2]
					}
				]
			}
			Roof
			{
				Layer = "roofs"
				DamageLevels
				[
					{
						File = "roof.png"
						NormalsFile = "roof_normals.png"
						Size = [2, 2]
					}
					{
						File = "roof_33.png"
						NormalsFile = "roof_normals_33.png"
						Size = [2, 2]
					}
					{
						File = "roof_66.png"
						NormalsFile = "roof_normals_66.png"
						Size = [2, 2]
					}
				]
			}
			OperationalRoofLighting
			{
				Layer = "roof_lights_fancy"
				DamageLevels
				[
					{
						File = "./Data/ships/common/light_blob.png"
						Size = [1.5, 1.5]
						Z = 1.5 // Controls the "height" of the light for the purposes of normal mapping.
						VertexColor = [0*2.0,255*2.0, 255*2.0]
					}
				]
			}
		}

		FtlSpin
		{
			Type = ContinuousEffects
			Location = [1, 1]
			FactorMediaEffectsIntensityWith = FtlDrive
			OperationalToggle = PowerToggle
			MediaEffects
			[
				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/ships/terran/hyperdrive_med/spin.wav"
					Volume = 0.75
					Speed = 3.5
					MaxConcurrent = 0
					VolumeOverIntensity = 1
					SpeedOverIntensity = [0, 1]
				}
			]
		}

		BatterySprites
		{
			Type = ResourceSprites
			Location = [1, 1]
			ResourceStorage = BatteryStorage
			Layer = "doodads_low"
			ResourceLevels
			[
				{
					File = "power1.png"
					Size = [2, 2]
				}
				{
					File = "power2.png"
					Size = [2, 2]
				}
				{
					File = "power3.png"
					Size = [2, 2]
				}
				{
					File = "power4.png"
					Size = [2, 2]
				}
				{
					File = "power5.png"
					Size = [2, 2]
				}
				{
					File = "power6.png"
					Size = [2, 2]
				}
				{
					File = "power7.png"
					Size = [2, 2]
				}
			]
		}

		OperationEffects
		{
			Type = ToggleEffects
			Location = [1, 1]
			Toggle = PowerToggle
			ToggledOnMediaEffects = &/COMMON_EFFECTS/PowerOn
			ToggledOffMediaEffects = &/COMMON_EFFECTS/PowerOff
		}

		DestroyedEffects
		{
			Type = DeathEffects
			MediaEffects = &/COMMON_EFFECTS/MedPartDestroyed
			Location = [1, 1]
		}

		Indicators
		{
			Type = IndicatorSprites
			Location = [1, 1]
			Layer = "indicators"
			Indicators
			[
				// Turned off.
				{
					Toggle = PowerToggle
					AtlasSprite
					{
						File = &/INDICATORS/PowerOff
						Size = [1, 1]
					}
				}
			]
		}

		Blueprints
		{
			Type = BlueprintSprite
			File = "blueprints.png"
			Size = [2, 2]
		}
	}

	//Stats
	Stats
	{
		FtlMaxEfficiencyRange = &~/Part/Components/FtlDrive/JumpEfficiencyDistanceRange/0
		FtlMinEfficiencyRange = &~/Part/Components/FtlDrive/JumpEfficiencyDistanceRange/1
		HyperiumCapacity = &~/Part/Components/HyperiumStorage/MaxResources
		PowerCapacity = (&~/Part/Components/BatteryStorage/MaxResources) / 1000
	}
	StatsNotesKey = "Stats/MediumHyperdriver_Notes"
}