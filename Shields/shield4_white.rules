Components
	{
		ArcShield : &<shield4_base.rules>/Components/ArcShield
		{
			OperationalToggle = IsOperationalAndWhite

			ShieldMediaEffects : ^/0/ShieldMediaEffects
			[
				: ^/0/0
				{
					ArcSprite : ^/0/ArcSprite
					{
						_fullPowerColor1 = &<ShieldTuner.rules>/White/_fullPowerColor1
						_lowPowerColor1 = &<ShieldTuner.rules>/White/_lowPowerColor1
						_fullPowerColor2 = &<ShieldTuner.rules>/White/_fullPowerColor2
						_lowPowerColor2 = &<ShieldTuner.rules>/White/_lowPowerColor2
					}
				}
			]
			
			HitMediaEffects : ^/0/HitMediaEffects
			[
				: ^/0/0
				{
					ArcSprite : ^/0/ArcSprite
					{
						_fullPowerColor1 = &<ShieldTuner.rules>/White/_fullPowerColor1
						_lowPowerColor1 = &<ShieldTuner.rules>/White/_lowPowerColor1
						_fullPowerColor2 = &<ShieldTuner.rules>/White/_fullPowerColor2
						_lowPowerColor2 = &<ShieldTuner.rules>/White/_lowPowerColor2
					}
				}
			]
		}

		ArcShield90 : ArcShield
		{
			Rotation = 90d
		}

		EmitterEffect : &<shield4_base.rules>/Components/EmitterEffect
		{
			OperationalToggle = ShieldEmitterEffectToggleAndIsOperational

			MediaEffects : ^/0/MediaEffects
			[
				: ^/0/0
				{
					ArcSprite : ^/0/ArcSprite
					{
						_fullPowerColor1 = &<ShieldTuner.rules>/White/_fullPowerColor1
						_lowPowerColor1 = &<ShieldTuner.rules>/White/_lowPowerColor1
						_fullPowerColor2 = &<ShieldTuner.rules>/White/_fullPowerColor2
						_lowPowerColor2 = &<ShieldTuner.rules>/White/_lowPowerColor2
					}
				}
			]
		}

		EmitterEffect90 : EmitterEffect
		{
			ChainedTo = ArcShield90
		}
	}