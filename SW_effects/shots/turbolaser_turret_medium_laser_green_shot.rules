ID = SW.turbolaser_turret_medium_laser_green_shot //TURRET WEAPONSHOT
//OtherIDs = ["green_heavy_laser_shot"]
Range = 300
IdealRange = [90, 300]
IdealRadius = [5, 50]
Speed = 120

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.45
		Density = 0.0001
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}
	
	Targetable
	{
		Type = Targetable
		Health = 2000
		TargetCategory = "laser"
	}

	Hit
	{
		Type = PenetratingHit
		Penetration = 5.0
		PenetrationSpeed = 20
		
		CrewCollisions = {Enemies=true; Junk=true}
		SourceShipLowCollisions = false
		FriendlyShipLowCollisions = false
		PenetratesCrew = true

		HitCrew = &HitOperational

		HitShield = &HitOperational

		HitOperational
		{
			ReduceEffectsByPenetration = true
			Offset = [-0.15, 0]

			HitEffects
			[
				{
					Type = Damage
					Damage = 2000
				}
				{
					Type = Impulse
					Impulse = 50
				}
			]

		MediaEffects
			[
				&/SW_PARTICLES/GreenLaserHit
				&/SW_PARTICLES/GreenLaserFlash
				&/SW_PARTICLES/GreenLaserSparks
	
				&/SW_SOUNDS/SmallLaserHit

				: /BASE_SHAKE
				{
					ShakeAmount = .1
					Duration = .4
				}
			]
		}
		HitStructural
		{
			ReduceEffectsByPenetration = true
			Offset = [0.5, 0]

			HitEffects
			[
				{
					Type = Damage
					Damage = 1000
				}
				{
					Type = Impulse
					Impulse = 25
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/GreenLaserHitStruct

				&/SW_SOUNDS/SmallLaserHit
			]
		}
		PenetratingOperational
		{
			ReduceEffectsByPenetration = true

			HitEffects
			[
				{
					Type = Damage
					Damage = 1000
				}
				{
					Type = Fire
					FireChance = .1
				}
				{
					Type = Impulse
					Impulse = 50
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/GreenLaserFlash
				&/SW_PARTICLES/GreenLaserSparks
			]
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational = &PenetratingOperational
		FinishedPenetratingStructural = &PenetratingStructural
	}

	Sprite
	{
		Type = AnimatedSprite
		RenderBucket = BulletUpper3
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		Animation
		{
			AtlasSprite
			{
				Texture
				{
					File = "lasershotgreen.png"
					SampleMode = Linear
					MipLevels = max
				}
				Size = [2.1, 1.05]//2.4 1.2
			}
			FrameCount = 2
			FrameSize = [64, 32]
			FramesPerRow = 1
			FramesPerSecond = 60
		}
		//NormalsTexture = &Animation/AtlasSprite/Texture
		DiffuseShader = "./Data/default.shader"
		NormalsShader = "./Data/no_normals.shader"
	}

	MediaEffects
	{
		Type = MediaEffects
		FactorEffectsWith = Hit
		FactorEffectsExponent = 0.5
		MediaEffects
		[
			&/SW_PARTICLES/LargeGreenLaserShotGlow
		]
	}
}
