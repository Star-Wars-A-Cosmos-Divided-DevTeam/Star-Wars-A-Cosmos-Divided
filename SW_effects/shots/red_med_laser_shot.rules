ID = SW.red_med_laser_shot_common //TURRET WEAPONSHOT
OtherIDs = ["red_med_laser_shot"]
Range = 400
IdealRange = [120, 400]
IdealRadius = [5, 50]
Speed = 120 //240

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.01
		Density = 0.1
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}
	
	Targetable
	{
		Type = Targetable
		Health = 1000
		TargetCategory = "laser"
	}

	Hit
	{
		Type = PenetratingHit
		FactorEffectsWith = Targetable

		CrewCollisions = {Enemies=true; Junk=true}
		SourceShipLowCollisions = false

		HitCrew = &HitOperational

		HitShield = &HitOperational

		HitOperational
		{
			HitEffects
			[
				{
					Type = Damage
					Damage = 2000
				}
				{
					Type = Impulse
					Impulse = 2.5
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/RedLaserHit
				&/SW_PARTICLES/RedLaserFlash
				&/SW_PARTICLES/RedLaserSparks
	
				&/SW_SOUNDS/SmallLaserHit

				: /BASE_SHAKE
				{
					ShakeAmount = .03
					Duration = .3
				}
			]
		}
		HitStructural
		{
			HitEffects
			[
				{
					Type = Damage
					Damage = 1000
					//TreatShieldAsPart = true
				}
				{
					Type = Impulse
					Impulse = 1.25
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/RedLaserHitStruct

				&/SW_SOUNDS/SmallLaserHit
			]
		}
		PenetratingOperational
		{
			// No effect.
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational
		{
			// No effect.
		}
		FinishedPenetratingStructural
		{
			// No effect.
		}
	}

	Sprite
	{
		Type = AnimatedSprite
		RenderBucket = BulletUpper3
		//ReduceScaleWith = Hit
		//ReduceScaleExponent = 0.5
		Animation
		{
			AtlasSprite
			{
				Texture
				{
					File = "lasershotred.png"
					SampleMode = Linear
					MipLevels = max
				}
				Size = [1.54, 0.72]
			}
			FrameCount = 2
			FrameSize = [64, 32]
			FramesPerRow = 1
			FramesPerSecond = 60
		}
		//NormalsTexture = "lasershotred_normals.png"
		//DiffuseShader = "./Data/default.shader"
		//NormalsShader = "./Data/no_normals.shader"
	}

	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper4
		Z = 0.5
		IsLight = true
		Offset = [0, 0]
		Sprite
		{
			Texture
			{
				File = "./Data/common_effects/particles/blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [12, 6]
			VertexColor = [255, 16, 16]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 24
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.125
		}
	}

	MediaEffects
	{
		Type = MediaEffects
		FactorEffectsWith = Hit
		FactorEffectsExponent = 0.5
		MediaEffects
		[
			&/SW_PARTICLES/RedLaserShotGlow
		]
	}
}
