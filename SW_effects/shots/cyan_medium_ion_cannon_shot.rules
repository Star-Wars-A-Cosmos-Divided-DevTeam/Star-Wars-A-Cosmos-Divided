ID = SW.cyan_medium_ion_cannon_shot
OtherIDs = ["blue_medium_ion_cannon_shot","SW.blue_medium_ion_cannon_shot"]

Range = 500
IdealRange = [60, 420]
IdealRadius = [5, 50]
Speed = 120

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.01
		Density = 0.1
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}

	Targetable
	{
		Type = Targetable
		Health = 4000
		TargetCategory = "ion_shot"
	}
/*
	MediaEffects1
	{
		Type = MediaEffects
		Offset = [-0.1, 0]
		Rotation = 180d
		MediaEffects
		[
			&/SW_PARTICLES/CyanIonShotPlumeLight
		]
	}
*/
	MediaEffects3
	{
		Type = MediaEffects
		Offset = [16/64, 0]
		MediaEffects
		[
			&/SW_PARTICLES/CyanIonShotTrailLightning
		]
	}

	Hit
	{
		Type = PenetratingHit
		Penetration = 50 // Enough to get through one shield and lose half penetration.
		PenetratesOperational = false
		FactorEffectsWith = Targetable
		
		CrewCollisions = {Enemies=true; Junk=true}
		SourceShipLowCollisions = false

		HitCrew = &HitOperational

		HitShield
		{
			HitEffects
			[
				{
					Type = ResourceDrain
					ResourceType = battery
					Amount = 2000
					TreatShieldAsPart = true

					MediaEffectsOnDrainFactor = .0005
					MediaEffectsOnDrain
					[
						&/SW_PARTICLES/CyanShipDrain
						&/SW_PARTICLES/CyanIonShotHitSizzle
						&/SW_PARTICLES/CyanIonShotLightning
						&/SW_SOUNDS/IonDischarge
					]
				}
				{
					Type = Damage
					Damage = 2000
				}
				{
					Type = Impulse;
					Impulse = 2.5;
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/CyanHit
				&/SW_PARTICLES/CyanFlash
				&/SW_PARTICLES/CyanSparks

				&/SW_SOUNDS/IonDischarge

				: /BASE_SHAKE
				{
					ShakeAmount = .03
					Duration = .3
				}
			]
		}
		HitOperational
		{
			ReduceEffectsByPenetration = true

			HitEffects
			[
				{
					Type = Damage
					Damage = 400
				}
				{
					Type = Impulse;
					Impulse = 2.5;
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/SmallCyanHit
				&/SW_PARTICLES/SmallCyanFlash
				&/SW_PARTICLES/SmallCyanSparks

				&/SW_SOUNDS/SmallLaserHit

				: /BASE_SHAKE
				{
					ShakeAmount = .03
					Duration = .3
				}
			]
		}
		HitStructural
		{
			HitEffects
			[
				{
					Type = Damage
					Damage = 125
				}
				{
					Type = Impulse;
					Impulse = 1.25;
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/CyanHit

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/laser_bolt_small/laser_bolt_small_hit.wav"
					Volume = .3
					SpeedVariation = .4
				}
			]
		}
		PenetratingOperational
		{
			// No effect.
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational = &PenetratingOperational
		FinishedPenetratingStructural = &PenetratingStructural
	}
	
	Sprite
	{
		Type = AnimatedSprite
		RenderBucket = BulletUpper3
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		Animation
		{
			AtlasSprite
			{
				Texture
				{
					File = "shot_cyan.png"
					SampleMode = Linear
					MipLevels = max
				}
				Size = [0.96, 0.72]
			}
			FrameCount = 1
			FrameSize = [128, 64]
			FramesPerRow = 1
			FramesPerSecond = 60
		}
	}

	/*Sprite
	{
		Type = Sprite
		RenderBucket = BulletUpper3
		Sprite
		{
			Texture = "cyan_ion.png"
			Size = [0.96, 0.72]
		}
	}*/

	MediaEffects
	{
		Type = MediaEffects
		InheritVelocityFrom = Physics
		FactorEffectsWith = Hit
		FactorEffectsExponent = 0.5
		MediaEffects
		[
			&/SW_PARTICLES/CyanIonShotGlow
		]
	}
}
