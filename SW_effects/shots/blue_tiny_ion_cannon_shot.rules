//only for fighters
ID = SW.blue_tiny_ion_cannon_shot

Range = 300
IdealRange = [60, 250]
IdealRadius = [5, 50]
Speed = 75

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.01
		Density = 0.0001
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}

	Targetable
	{
		Type = Targetable
		Health = 600
		TargetCategory = "laser"
	}


	Hit
	{
		Type = PenetratingHit
		Penetration = 0.1
		PenetratesOperational = false
		
		CrewCollisions = {Enemies=true; Junk=true}
		SourceShipLowCollisions = false
		PenetratesCrew = true
		HitCrew = &HitOperational


		HitShield
		{
			ReduceEffectsByPenetration = true
			HitEffects
			[
				{

					Type = Damage

					Damage = 1000

				}
				{
					Type = Impulse
					Impulse = 1
				}
			]

			MediaEffects = &../HitOperational/MediaEffects
		}
		HitOperational
		{
			ReduceEffectsByPenetration = true
			HitEffects
			[
				{

					Type = Damage

					Damage = 100

				}
				{
					Type = Impulse;
					Impulse = 1
				}
			]

			MediaEffects
			[
				&/PARTICLES/BlueLaserHit
				&/PARTICLES/BlueLaserFlash
				&/PARTICLES/BlueLaserSparks
	
				&/SW_SOUNDS/SmallLaserHit

				: /BASE_SHAKE
				{
					ShakeAmount = .03
					Duration = .3
				}
			]
		}
		HitStructural
		{
			ReduceEffectsByPenetration = true
			HitEffects
			[
				{

					Type = Damage

					Damage = 50

				}
				{
					Type = Impulse;
					Impulse = .5;
				}
			]

			MediaEffects
			[
				&/PARTICLES/BlueLaserHit

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/laser_bolt_small/laser_bolt_small_hit.wav"
					Volume = .3
					SpeedVariation = .4
				}
			]
		}
		PenetratingOperational
		{
			// No effect.
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational
		{
			// No effect.
		}
		FinishedPenetratingStructural
		{
			// No effect.
		}
	}

	Sprite
	{
		Type = AnimatedSprite
		RenderBucket = BulletUpper3
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		Animation
		{
			AtlasSprite
			{
				Texture
				{
					File = "lasershotblue.png"
					SampleMode = Linear
					MipLevels = max
				}
				Size = [0.64, 0.64]
			}
			FrameCount = 2
			FrameSize = [64, 32]
			FramesPerRow = 1
			FramesPerSecond = 60
		}
		NormalsTexture = &Animation/AtlasSprite/Texture
		DiffuseShader = "./Data/default.shader"
		NormalsShader = "./Data/no_normals.shader"
	}
	
	MediaEffects
	{
		Type = MediaEffects
		InheritVelocityFrom = Physics
		FactorEffectsWith = Hit
		FactorEffectsExponent = 0.5
		MediaEffects
		[
			&/PARTICLES/BlueLaserShotGlow
		]
	}
}
