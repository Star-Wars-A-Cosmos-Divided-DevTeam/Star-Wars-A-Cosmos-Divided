Part : &<../base_part_terran_hangar.rules>/Part
{
	//IDs
	ID = SW.SW_hangar_corridor_modular_transition
	//OtherIDs = []

	//StringKeys
	NameKey = "Parts/Corridor"
	IconNameKey = "Parts/CorridorIcon"
	DescriptionKey = "Parts/CorridorDesc"

	//Groups&Categories
	EditorGroups = ["SWHangar", "SWTechII"]
	TypeCategories = [corridor, SW_hangar, SW_hangar_transition, SW_hangar_wall_blendable, SW_Tech_II]
	//RequiresCategories = [SW_Bridge] //some sort of requirement or non since it just decoration??

	//Resoures&Size&Health
	Resources
	[
		[steel, 4]
	]
	Size = [1, 1]
	MaxHealth = 1000

	//Selections
	IgnoreRotationForMirroredSelection = true

	//PartSpecific
	//DefaultEditorHotkey = [Shift + Z] //hmmm
	AIValueFactor = 0
	//CreatePartPerTileWhenGrabbed = "" // aka now is corridor
	CrewSpeedFactor = 1
	CrewCongestedSpeedFactor = .5
	IsRotateable = false
	IsSelfDestructible = false

	//Doors&Etc
	GeneratorRequiresDoor = false
	IsWalled = false

	//ReceivableBuffs&Prohibits
	ReceivableBuffs : ^/0/ReceivableBuffs []

	//Editor
	EditorIcon
	{
		Texture
		{
			File = "icon.png"
			SampleMode = Linear
		}
		Size = [32, 32]
	}

	//Components&Inheritance
	Components : ^/0/Components
	{
		//Blend Stuff

		WallsBlend : <./Data/ships/terran/walls/walls.rules>
		{
			Type = BlendSprite
			Location = [.5, .5]
			BlendsWithCategories = [SW_hangar_wall_blendable, corridor]
		}

		BlueprintWalls :  <./Data/ships/terran/walls/blueprint_walls.rules>
		{
			Location = [.5, .5]
			BlendsWithCategories = [SW_hangar_wall_blendable, corridor]
		}

		HangarWallBlendableSprites
		{
			Type = BlendSpriteGrid
			IncludeWhenUnderConstruction = false
			IncludeWhenNotUnderConstruction = false
			Layer = "walls"
			AmbiguousSprites = &<../hangar_walls/walls.rules>/AmbiguousSprites
			AllowUndefinedBlendSprites = true
			BlendsWithCategories = [SW_hangar_wall_blendable]
			AlwaysBlendWithSelf = true
		}

		Graphics
		{
			Type = Graphics
			Location = [.5, .5]
			Floor
			{
				Layer = "floors"
				RandomUVRotation = true
				DamageLevels
				[
					{
						File = "../hangar_sprites/hangar_floor.png"
						Size = [1, 1]
					}
					{
						File = "../hangar_sprites/hangar_floor_33.png"
						Size = [1, 1]
					}
					{
						File = "../hangar_sprites/hangar_floor_66.png"
						Size = [1, 1]
					}
				]
			}
			Roof
			{
				Layer = "roofs"
				RandomUVRotation = true
				DamageLevels
				[
					{
						File = "../hangar_sprites/hangar_roof.png"
						NormalsFile = "../hangar_sprites/hangar_roof_normals.png"
						Size = [1, 1]
					}
					{
						File = "../hangar_sprites/hangar_roof_33.png"
						NormalsFile = "../hangar_sprites/hangar_roof_normals_33.png"
						Size = [1, 1]
					}
					{
						File = "../hangar_sprites/hangar_roof_66.png"
						NormalsFile = "../hangar_sprites/hangar_roof_normals_66.png"
						Size = [1, 1]
					}
				]
			}
		}

		DestroyedEffects
		{
			Type = DeathEffects
			MediaEffects = &/COMMON_EFFECTS/SmallPartDestroyedDry
			Location = [.5, .5]
		}

		Blueprints
		{
			Type = BlueprintSprite
			File = "blueprints.png"
			Size = [1, 1]
		}
	}
}