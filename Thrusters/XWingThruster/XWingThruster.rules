		{
			Type = ValueProxy
			ComponentID = ThrusterLEffectsValue
		}

		ThrusterREffectsValueProxy
		{
			Type = ValueProxy
			ComponentID = ThrusterLEffectsValue
		}

		ThrusterEffectsValue
		{
			Type = MultiValue
			Values = [MainThrusterL, MainThrusterR, ReverseThrusterL, ReverseThrusterR]
			Mode = Max
		}

		ThrusterLEffectsValue
		{
			Type = MultiValue
			Values = [MainThrusterL, ReverseThrusterL]
			Mode = Max
		}

		ThrusterREffectsValue
		{
			Type = MultiValue
			Values = [MainThrusterR, ReverseThrusterR]
			Mode = Max
		}

		MainThrusterBase : &~/MainThrusterBase
		{
			MinActivation = 0
			MaxActivation = 0
		}

		MainThrusterL : &~/MainThrusterBase
		{
			Location = [2.5-1-30/64, 3-8/64]
		}
		MainThrusterR : &~/MainThrusterBase
		{
			Location = [2.5+1+30/64, 3-8/64]
		}

		LateralThruster : &~/MainThrusterBase
		{
			Rotation = 0d
			MinActivation = -0.4
			MaxActivation = 0.4
			MinUncommandedActivation = &MinActivation
			MaxUncommandedActivation = &MaxActivation
			FuelUsagePerSecond = (&../../FuelUsage)/5
			AllowAutoFire = false
		}

		ReverseThrusterL : MainThrusterL
		{
			Rotation = -90d
			MinActivation = 0
			MaxActivation = { BaseValue=0.42; BuffType=Engine; BuffMode=Multiply; }
			MinUncommandedActivation = 0
			MaxUncommandedActivation = &MaxActivation
			ActivationIncreaseTime = (&../../ThrustIncreaseTime)*2.1
			ActivationRecoveryTime = (&../../ThrustRecoveryTime)*1.2
			FuelUsagePerSecond = (&../../FuelUsage)*0.81//Penalty for reverse Thrust
			AllowAutoFire = false
		}

		ReverseThrusterR : MainThrusterR
