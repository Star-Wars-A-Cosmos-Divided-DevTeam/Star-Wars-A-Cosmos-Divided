		OperationEffects
		{
			Type = ToggleEffects
			Location = [5, 10]
			Toggle = IsOperational
			ToggledOnMediaEffects = &/COMMON_EFFECTS/PowerOn
			ToggledOffMediaEffects = &/COMMON_EFFECTS/PowerOff
		}

		DestroyedEffects
		{
			Type = DeathEffects
			MediaEffects = &/COMMON_EFFECTS/HugePartDestroyed
			Location = [5, 10]
		}

		Indicators
		{
			Type = IndicatorSprites
			Location = [5, 10]
			Layer = "indicators"
			Indicators
			[
				// Turned off.
				{
					Toggle = PowerToggle
					AtlasSprite
					{
						File = &/INDICATORS/PowerOff
						Size = [5, 5]
					}
				}

				// Out of power.
				{
					Toggle = BatteryStorage
					Delay = 0.1
					AtlasSprite
					{
						File = &/INDICATORS/NoPower
						Size = [5, 5]
					}
				}

				// No crew.
				{
					Toggle = PartCrew
					AtlasSprite
					{
						File = &/INDICATORS/NoCrew
						Size = [1, 1]
					}
				}
			]
		}

		Blueprints
		{
			Type = BlueprintSprite
			File = "blueprints.png"
			Size = [10, 20]
		}

		BlueprintsBuff
		{
			Type = BlueprintSprite
			File = "blueprints_buff.png"
			Size = [30, 30]
			Offset = [0, 25]
		}


