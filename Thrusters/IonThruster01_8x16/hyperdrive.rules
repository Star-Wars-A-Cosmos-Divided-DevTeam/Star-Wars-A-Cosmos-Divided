FtlHyperiumStorage
{
    Type = ResourceStorage
    ResourceType = hyperium
    MaxResources = 20
    UITileRect = [9.5 + 7/64, .5 + 7/64, 1 - 14/64, 1 - 14/64]
    ReceiveResourceMediaEffects = &/COMMON_EFFECTS/ElementDeliver
    DropResourcesWhenDestroyed = true
}
FtlHyperiumProducer
{
    Type = ResourceConverter
    OperationalToggle = FtlDrive
    InvertOperationalToggle = true
    ToStorage = FtlHyperiumStorage
    ToQuantity = 1
    Interval = 1/10
}
FtlHyperiumStorageBar
{
    Type = ProgressBar
    OperationalToggle = IsOperational
    ShowProgressFor = FtlHyperiumStorage
    LowColor = [0, 64, 64]
    HighColor = [0, 250, 250]
    FullColor = [0, 255, 255]
}
