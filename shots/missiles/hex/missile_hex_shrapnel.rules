ID = "sw.missile_hex_shrapnel"
Range = 40
Speed = 35

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.25
		Density = 1
		RandomExtraSpeed = [-5, 5]
	}

	Death
	{
		Type = DeathByLifetime
		Lifetime = [1, 1.3]
	}

	Hit
	{
		Type = PenetratingHit
		Penetration = 20
		PenetrationSpeed = 20
		PenetratesFriendlies = true

		CrewCollisions = { Enemies=true; Junk=true }
		PenetratesCrew = true
		HitCrew = &HitOperational

		ShieldCollisions
		{
			HitsOwnShields = true
			HitsFriendlyShields = true
		}

		HitShield = &HitOperational
		HitOperational
		{
			ReduceEffectsByPenetration = true
			Offset = [-0.15, 0]

			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = 100
					Radius = 1
					Filter
					{
						Friendlies = true
					}
				}
				{
					Type = Fire
					FireChance = 2
				}
				{
					Type = Impulse
					Impulse = 40
				}
			]

			MediaEffects
			[
				&<./Data/shots/bullet_large/particles/bullet_hit_large_sparks.rules>
				&<./Data/shots/bullet_large/particles/bullet_smoke_large.rules>
				&<./Data/shots/bullet_large/particles/bullet_flash_large.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/bullet_large/bullet_large_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .1
					Duration = .75
				}
			]
		}
		HitStructural
		{
			ReduceEffectsByPenetration = true

			HitEffects
			[

			]

			MediaEffects
			[
				&<./Data/shots/bullet_large/particles/bullet_hit_large_sparks.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/bullet_large/bullet_large_hit_structure.wav"
					Volume = .5
					SpeedVariation = .4
				}
			]
		}
		PenetratingOperational
		{
			ReduceEffectsByPenetration = true

			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = 100
					Radius = 1
					Filter
					{
						Friendlies = true
					}
				}
				{
					Type = Fire
					FireChance = 4
					Filter
					{
						Friendlies = true
					}
				}
				{
					Type = Impulse
					Impulse = 60
				}
			]

			MediaEffects
			[
				&<./Data/shots/bullet_large/particles/bullet_hit_large_sparks.rules>
			]
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational = &PenetratingOperational
		FinishedPenetratingStructural = &PenetratingStructural
	}

	Sprite
	{
		Type = Sprite
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		Sprite
		{
			Texture
			{
				File = "mine_shrapnel.png"
				SampleMode = Linear
				MipLevels = max
			}
			Size = [1.5, 1.5]
		}
	}

	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper2
		Z = 0
		IsLight = true
		Offset = [-1, 0]
		Sprite
		{
			Texture
			{
				File = "./Data/common_effects/particles/blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [12, 6]
			VertexColor = [255, 100, 0]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 24
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.125
		}
	}

	MediaEffects
	{
		Type = MediaEffects
		MediaEffects
		[
			&<particles/missile_hex_shrapnel_trail.rules>
		]
	}
}