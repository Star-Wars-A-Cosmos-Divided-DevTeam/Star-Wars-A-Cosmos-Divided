ID = SW.concussion_direct_heavy_laser_blue_shot //DIRECT WEAPONSHOT
Range = 320
IdealRange = [96, 320]
IdealRadius = [5, 50]
Speed = 140 //70

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.3
		Density = 0.1
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}
	
	Targetable
	{
		Type = Targetable
		Health = 2000
		TargetCategory = "laser"
	}

	Hit
	{
		Type = PenetratingHit
		FactorEffectsWith = Targetable
		//Penetration = 200.0
		//PenetrationSpeed = 15
		PenetratesShields = false

		CrewCollisions = {Enemies=true; Junk=true}
		FriendlyShipLowCollisions = true
		SourceShipLowCollisions = true
		PenetratesCrew = true
		HitCrew = &HitOperational

		HitShield
		{
			HitEffects
			[
				{
					Type = Damage
					Damage = 7000  // bad vs shield 1/5 of total part damage
				}
				{
					Type = Impulse
					Impulse = 300
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/SWConcussionLaserHitBlue
				&/SW_PARTICLES/Shot/Laser/Flash/Med/Blue
				&/SW_PARTICLES/Shot/Laser/Sparks/Med/Blue
	
				&/SW_SOUNDS/SmallLaserHit

				: /BASE_SHAKE
				{
					ShakeAmount = .03
					Duration = .3
				}
			]
		}
		HitOperational
		{
			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = 25000
					Radius = 9
					ExpandDuration = 0.2
					ExpandStartRadius = 1
					ExpandLoss = 100%
					ImpulsePerNDamage = 10
					NDamage = 10000
					// Filter
					// {
					// 	Friendlies = true
					// }
				}
				{
					Type = Damage
					Damage = 200
				}
				{
					Type = Impulse
					Impulse = 100
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/SWConcussionLaserHitBlue
				&/SW_PARTICLES/Shot/Laser/Flash/Med/Blue
				&/SW_PARTICLES/Shot/Laser/Sparks/Med/Blue
				&/SW_PARTICLES/SWFlakLargeFlash
				// &/SW_PARTICLES/SWFlakLargeSmoke
	
				&/SW_SOUNDS/SWConcussionLaserHit

				: /BASE_SHAKE
				{
					ShakeAmount = .2
					Duration = .75
				}
			]
		}
		HitStructural = &HitOperational
	}
	Sprite
	{
		Type = AnimatedSprite
		RenderBucket = BulletUpper3
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		Animation
		{
			AtlasSprite
			{
				Texture
				{
					File = "lasershotblue.png"
					SampleMode = Linear
					MipLevels = max
				}
				Size = [2.1, 1.05]//2.4 1.2
			}
			FrameCount = 2
			FrameSize = [64, 32]
			FramesPerRow = 1
			FramesPerSecond = 60
		}
		//NormalsTexture = &Animation/AtlasSprite/Texture
		DiffuseShader = "./Data/default.shader"
		NormalsShader = "./Data/no_normals.shader"
	}
/*
	Sprite
	{
