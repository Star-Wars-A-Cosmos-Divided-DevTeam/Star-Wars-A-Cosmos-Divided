		Sprite
		{
			Texture
			{
				File = "./Data/common_effects/particles/blob.png"
				MipLevels = max
				SampleMode = Linear
			}
			Size = [18, 9]
			VertexColor = [0, 0, 255] // VertexColor = [255, 100, 0]
			TargetBlendMode = Add
			Shader = "./Data/common_effects/fancy_light.shader"
			_litReflectiveStrength = 24
			_litAdditiveStrength = 0.05
			_unlitAdditiveStrength = 0.125
		}
	}
	MediaEffects3
	{
		Type = MediaEffects
		Offset = [45/64, 0]
		MediaEffects
		[
			&/SW_PARTICLES/Shot/Laser/Glow/Med/Blue
			&/SW_PARTICLES/SWConcussionLaserTrailBlue
		]
	}	
