ID = SW.turbolaser_turret_light_laser_blue_shot //TURRET WEAPONSHOT

Range = 400
IdealRange = [120, 400]
IdealRadius = [5, 50]
Speed = 140 

Components
{
	Physics
	{
		Type = CirclePhysics
		Radius = 0.01
		Density = 0.0001
	}

	Death
	{
		Type = DeathByLifetime
		// Lifetime will be auto-calculated based on range and speed.
	}
	
	Targetable
	{
		Type = Targetable
		Health = 1000
		TargetCategory = "laser"
	}

	Hit
	{
		Type = PenetratingHit
		Penetration = 2.5
		PenetrationSpeed = 10
		FactorEffectsWith = Targetable
		
		CrewCollisions = {Enemies=true; Junk=true}
		SourceShipLowCollisions = false
		FriendlyShipLowCollisions = false
		PenetratesCrew = true

		HitCrew = &HitOperational

		HitShield = &HitOperational

		HitOperational
		{
			ReduceEffectsByPenetration = true
			Offset = [-0.15, 0]

			HitEffects
			[
				{
					Type = Damage
					Damage = 1000
				}
				{
					Type = Impulse
					Impulse = 25
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/Shot/Laser/Hit/Med/Blue
				&/SW_PARTICLES/Shot/Laser/Flash/Med/Blue
				&/SW_PARTICLES/Shot/Laser/Sparks/Med/Blue
	
				&/SW_SOUNDS/SmallLaserHit

				: /BASE_SHAKE
				{
					ShakeAmount = .03
					Duration = .2
				}
			]
		}

		HitStructural
		{
			HitEffects
			[
				{
					Type = Damage
					Damage = 500
				}
				{
					Type = Impulse
					Impulse = 15
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/Shot/Laser/HitStruct/Med/Blue

				&/SW_SOUNDS/SmallLaserHit
			]
		}
		PenetratingOperational
		{
			ReduceEffectsByPenetration = true

			HitEffects
			[
				{
					Type = Damage
					Damage = 500
				}
				{
					Type = Fire
					FireChance = .05
				}
				{
					Type = Impulse
					Impulse = 15
				}
			]

			MediaEffects
			[
				&/SW_PARTICLES/Shot/Laser/Flash/Med/Blue
				&/SW_PARTICLES/Shot/Laser/Sparks/Med/Blue
			]
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational = &PenetratingOperational
		FinishedPenetratingStructural = &PenetratingStructural
	}

	Sprite
	{
		Type = AnimatedSprite
		RenderBucket = BulletUpper3
		//ReduceScaleWith = Hit
		//ReduceScaleExponent = 0.5
		Animation
		{
			AtlasSprite
			{
				Texture
				{
					File = "blue_laser.png"
					SampleMode = Linear
					MipLevels = max
				}
				Size = [0.64, 0.64]
			}
			FrameCount = 8
			FrameSize = [128, 128]
			FramesPerRow = 2
			FramesPerSecond = 32
		}
		//NormalsTexture = &Animation/AtlasSprite/Texture
		DiffuseShader = "./Data/default.shader"
		NormalsShader = "./Data/no_normals.shader"
	}

	MediaEffects
	{
		Type = MediaEffects
		FactorEffectsWith = Hit
		FactorEffectsExponent = 0.5
		MediaEffects
		[
			&/SW_PARTICLES/Shot/Laser/Glow/Small/Blue
		]
	}
}
