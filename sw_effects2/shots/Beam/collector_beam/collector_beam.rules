Range = 200
IdealRange = 200
Duration = 1 / (&/Simulation/PhysicsUpdatesPerSecond)
HitInterval = 1 / (&/Simulation/PhysicsUpdatesPerSecond)
FriendlyShipLowCollisions = false
FriendlyShipHighCollisions = false
NonFriendlyShipLowCollisions = false
NonFriendlyShipHighCollisions = false
ClipRangeToTarget = true
MediaEffectsScaleOverRange = [0.6, -10]

BeamMediaEffects
[
	&<collector_beam_glints.rules>
	{
		Type = Beam
		IsFancy = true
		BeamSprite
		{
			Shader = "../../shader/tractor_beam.shader"
			Size = [100%, 0.75]
			VertexColor = [255, 255, 255, 255]

			_extraBeginLength = 0
			_extraEndLength = 0
			_extraEndArc = 0d
			_minAlpha = .25

			Texture
			{
				File = ./Data/common_effects/particles/noise_voronoi2.png
				SampleMode = Linear
				MipLevels = max
				UMode = Wrap
				VMode = Wrap
			}
			_displacementStrength = 0.25
			_displacementSpeed = .2
			_additiveStrength = 0.4

			_noiseScaleX = 0.02
			_noiseScaleY = 2
			_noiseScrollSpeed = -2
			_noisePanSpeed = 0
			_endFadeLength = 1

			_color1 = [60, 130, 224, 255]
			_color2 = [88, 181, 224, 255]

			TargetBlendMode
			{
				SourceRgbFactor = SourceAlpha
				DestRgbFactor = InverseSourceAlpha
				RgbOperator = Add
				SourceAlphaFactor = One
				DestAlphaFactor = One
				AlphaOperator = Add
			}

			_noiseTex
			{
				File = ./Data/common_effects/particles/noise_gradient.png
				SampleMode = Linear
				MipLevels = max
				UVMode = Wrap
			}
		}
		FadeInTime = .25
		FadeOutTime = .25
		SpeedOverIntensity = [0, 0.5]
		Bucket = TractorBeam
		CaptureBackBuffer = true
		LengthSmoothSpeed = 20
		MinIntensity = -Infinity
	}

	: 1
	{
		IsFancy = false
		IsSimple = true
		BeamSprite : ^/0/BeamSprite
		{
			Shader = "../../shader/tractor_beam_simple.shader"
			TargetBlendMode
			{
				SourceRgbFactor = One
				DestRgbFactor = One
				RgbOperator = Add
				SourceAlphaFactor = One
				DestAlphaFactor = One
				AlphaOperator = Add
			}
			_color1 = [60, 130, 224, 255]
			_color2 = [88, 181, 224, 255]
		}
		CaptureBackBuffer = false
	}

	: /BASE_SOUNDS/AudioExterior
	{
		Sound = "collector_beam.wav"
		Volume = 50%
		Speed = 100%
		RampUpTime = .25
		RampDownTime = .25

		DynamicVolume : ^/0/DynamicVolume
		{
			UseCustomShapeForDistance = true
		}
		DynamicFilter : ^/0/DynamicFilter
		{
			UseCustomShapeForDistance = true
		}
	}
]

HitNothing
{
	HitEffects
	[
		{
			Type = CollectNugget
			DeliveryDistance = 0.25
			AccelerationOverDistance = 16
			DampingOverDistance = [7, 0.25]
			OverDistance = [0.5, 8]
			DoorOpenDistance = 4
		}
	]
}