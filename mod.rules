		OverrideIn = "<./Data/gui/game/indicators/indicators.rules>"
		Overrides = &<gui/indicators.rules>
	}
	*/
	//CategoryLimits - Parts sharing the same categorytype will share the limit, create new categories as needed in section below
	{
		Action = Add
		AddTo = "<ships/terran/terran.rules>/Terran"
		Name = CategoryLimits
		OnlyIfNotExisting = true
		ToAdd = []
	}
